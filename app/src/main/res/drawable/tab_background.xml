<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 當 Tab 被選中時的狀態 -->
    <item android:state_selected="true">
        <layer-list>
            <!-- 粉紅色背景 -->
            <item>
                <shape>
                    <solid android:color="@color/tabBackgroundPink" />
                </shape>
            </item>

            <!-- 左右邊框 (1dp) -->
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/tabStrokeGray" />
                    <padding
                        android:left="-1dp"
                        android:right="-1dp" />
                </shape>
            </item>

            <!-- 上下邊框 (2dp) -->
            <item>
                <shape>
                    <stroke
                        android:width="2dp"
                        android:color="@color/tabStrokeGray" />
                    <padding
                        android:left="-1dp"
                        android:right="-1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 當 Tab 未被選中時的狀態 -->
    <item>
        <layer-list>
            <!-- 粉紅色背景 -->
            <item>
                <shape>
                    <solid android:color="@color/tabBackgroundPink" />
                </shape>
            </item>

            <!-- 左右邊框 (1dp) -->
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/tabStrokeGray" />
                    <padding
                        android:left="-1dp"
                        android:right="-1dp" />
                </shape>
            </item>

            <!-- 上下邊框 (2dp) -->
            <item>
                <shape>
                    <stroke
                        android:width="2dp"
                        android:color="@color/tabStrokeGray" />
                    <padding
                        android:left="-1dp"
                        android:right="-1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
