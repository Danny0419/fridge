<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.shopping_list.ShoppingListFragment"
    android:id="@+id/fragment_shopping_list">

    <include
        layout="@layout/ingredient_list"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addNewShoppingListItemButton"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="360dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="66.67dp"
            android:layout_height="66.67dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/dark_pink"
            android:text="十"
            android:textColor="@color/white"
            android:textSize="26.67dp"
            android:textStyle="bold"
            android:theme="@style/Theme.Material3.Dark.BottomSheetDialog" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>