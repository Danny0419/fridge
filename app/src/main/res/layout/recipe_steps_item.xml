<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="11dp">

    <TextView
        android:id="@+id/step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_under_line"
        android:fontFamily="@font/regular"
        android:text="Step1."
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/step_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="食譜步驟照片一"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step"
        app:layout_constraintEnd_toStartOf="@+id/step_describe"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginRight="2dp"
        />

    <TextView
        android:id="@+id/step_describe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="食譜描述"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/step_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginLeft="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>